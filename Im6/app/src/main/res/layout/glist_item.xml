<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginStart="@dimen/margin1"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_glist"
        tools:background="@mipmap/ic_launcher"
        android:layout_width="@dimen/glist_ivsize"
        android:layout_height="@dimen/glist_ivsize"/>

    <TextView
        android:id="@+id/gameName_glist"
        tools:text="@string/text_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_blue"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/gameNum_glist"
        android:layout_width="wrap_content"
        tools:text="@string/text_word"
        android:layout_height="wrap_content"
        android:textColor="@color/text_white"/>
        <TextView
            android:text="@string/hotGame_liveCount"
            android:textColor="@color/text_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>