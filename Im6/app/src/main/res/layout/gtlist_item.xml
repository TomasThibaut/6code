<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/gtlist_item_height">

    <ImageView
        android:id="@+id/iv_gtlist_head"
        android:layout_width="@dimen/gtlist_ivsize"
        android:layout_height="@dimen/gtlist_ivsize"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/name_gtlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/iv_gtlist_head"
        tools:text="@string/text_word"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/arrow_marginEnd"
        android:src="@mipmap/game_type_cell_arrow"/>
</RelativeLayout>